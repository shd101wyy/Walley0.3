;; diff func
;; eg d(x^2)/dx at point 0 is
;; (diff (lambda [x] (^ x 2)) 0)
(def (diff func diff-at-point :error 0.000001)
     (def (diff_ error)
	  (/  (- (func diff-at-point)
	  		 (func (- diff-at-point error)))
	   	  error))
	(diff_ error))
